@page
@using TriviaSpark.Core.Match.Models
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Match.MatchId" />
            <div class="form-group">
                <label asp-for="Match.UserId" class="control-label"></label>
                <select asp-for="Match.UserId" class="form-control" asp-items="Model.Users"></select>
                <span asp-validation-for="Match.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.MatchName" class="control-label"></label>
                <input asp-for="Match.MatchName" class="form-control" />
                <span asp-validation-for="Match.MatchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.MatchMode" class="control-label"></label>
                <select asp-for="Match.MatchMode" class="form-control" asp-items="Html.GetEnumSelectList<MatchMode>()"></select>
                <span asp-validation-for="Match.MatchMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.Difficulty" class="control-label"></label>
                <select asp-for="Match.Difficulty" class="form-control" asp-items="Html.GetEnumSelectList<Difficulty>()"></select>
                <span asp-validation-for="Match.Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.QuestionType" class="control-label"></label>
                <select asp-for="Match.QuestionType" class="form-control" asp-items="Html.GetEnumSelectList<QuestionType>()"></select>
                <span asp-validation-for="Match.QuestionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
