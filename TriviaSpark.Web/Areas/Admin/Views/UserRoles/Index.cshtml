@using TriviaSpark.Web.Areas.Admin.Controllers;
@using TriviaSpark.Web.Areas.Admin.Models;
@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>User Roles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <a class="" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">@user.Email</a>
                </td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
            </tr>
        }
    </tbody>
</table>